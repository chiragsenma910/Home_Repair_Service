    <div class="main-content">
        <h1>Appointment Management</h1>
        <button id="showAllAppointmentsButton">Show All Appointments</button>
        
        <table id="appointmentsTable" style="display: none;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Worker Id</th>
                    <th>User Id</th>
                    <th>Worker Type</th>
                    <th>Task Details</th>
                    <th>Task Date</th>
                    <th>Task Time Slot</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- User rows will be inserted here by JavaScript -->
            </tbody>
        </table>
    </div>
    

