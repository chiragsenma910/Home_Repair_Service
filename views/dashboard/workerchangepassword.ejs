<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Password Dashboard</title>
        <link rel="stylesheet" href="/css/changepassword.css">
        <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> Font Awesome for icons -->
    </head>
    <body>
        <script src="/js/changepassword.js"></script> <!-- JavaScript file -->
        
    <div class="sidebar">
        <!-- Home Icon -->
        <div class="home-icon">
            <a href="/homepage"><img src="img/dashboard/homeicon.svg" alt=""></a>
        </div>
        <!-- User Image and Name -->
        <div class="part-1">
            <div class="user-image">
                <!-- Check if user is logged in and has a profile image -->
                <% if(user && user.profile_image) { %>
                    <img src="<%= user.profile_image %>" alt="User Image">
                <% } else { %>
                    <!-- If user is not logged in or has no profile image, display a default image -->
                     <img src="img/dashboard/usericon2.svg" alt="Default Profile Image">
                <% } %>
            </div>
            <!-- User Name -->
            <div class="user-name">
                <!-- Replace 'John Doe' with the actual user's name -->
                <p><%= user ? user.firstname + ' ' + user.lastname : 'Guest' %></p>
            </div>
        </div>
        <!-- Sidebar Menu -->
        <div class="sidebar-menu">
            <ul>
                <li><a  href="/workerprofile">Profile</a></li>
                <hr> <!-- Separator Line -->
                <li><a href="/workerchangepassword">Password</a></li>
                <hr> <!-- Separator Line -->
                <li><a href="workerservice">Service request</a></li>
                <hr> <!-- Separator Line -->
                <li><a href="#">Settings</a></li>
                <hr> <!-- Separator Line -->
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </div>
    
    <div class="main-content">
        <div class="password-card">
            <div class="password-form">
                <h2>Change Password</h2>
                <div class="form-group">
                    <label for="current-password">Current Password:</label>
                    <input type="password" id="current-password" required>
                </div>
                <div class="form-group">
                    <label for="new-password">New Password:</label>
                    <input type="password" id="new-password" required>
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm New Password:</label>
                    <input type="password" id="confirm-password" required>
                </div>
                <div class="action-buttons" id="action-buttons">
                    <button class="save-button">Save</button>
                    <button class="cancel-button">Cancel</button>   
                </div>
                <div class="trigger-button">
                    <button class="change-password-button">Change Password</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
